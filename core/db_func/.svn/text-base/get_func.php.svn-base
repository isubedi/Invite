	function getEventsByUser($id) {
		$result = mysql_query("SELECT id from event where host_id = '$id' order by event_date desc") or die(mysql_error());
		
		$userRows = array();
	    while($r = mysql_fetch_assoc($result)) {
	      $userRows[] = $r;
	    }

		return $userRows;
	}
