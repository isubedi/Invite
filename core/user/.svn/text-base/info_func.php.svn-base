<?php

function getUserName($id){
	$sql="SELECT * FROM users WHERE userId= '".$id."'";
	$result = mysql_query($sql)or die(mysql_error());
	$row = mysql_fetch_array($result) ;
	return $row['username'];

}

function getName($id){
	$sql="SELECT * FROM users WHERE userId= '".$id."'";
	$result = mysql_query($sql)or die(mysql_error());
	$row = mysql_fetch_array($result) ;
	return $row['name'];
}


?>