/* CONTAINERS */

html, body {
	padding: 0px;
	margin: 0px;
	width: 100%;
	height: 100%;
	overflow-x: hidden;
	background: #F0F0F0;
}

body {
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
	font-smooth: always;
	font-weight: 300;
}

#container {
	padding: 15px;
}

#footer {
	height: 40px;
	width: 100%;
	position: fixed;
	bottom: 0px;
	left: 0px;
	color: #fff;
}

#loginForm {
}

#loginHeader {
	background: #eee;
	width: 100%;
}

#headerBar {
	width: 100%;
	height: 40px;
	background-color: #94c4ff;
}

#headerBar #currentPage {
	float: left;
	color: #fff;
	margin-left: 10px;
	margin-top: 6px;
}

#headerBar .button {
	width: 20px;
	height: 20px;
	margin-right: 10px;
	font-family: sans-serif;
	font-size: 18px;
	padding: 3px;
	background: #94c6ff;
	float: right;
	border: 1px solid #4e5cc5;
	text-align: center;
	vertical-align: middle;
}


/* MENU */

#menuContainer {
	width: 100%;
	height: 40px;
	background-color: #353535;
}

#menu {
	padding: 0px;
	margin: 0px;
	width: 100%;
	height: 40px;
	list-style: none;
	display: inline;
	vertical-align: middle;
}

#menu a {
	color: white;	
	text-decoration: none;
}

.menuItem {
	background: #333;
	height: 30px;
	width: auto;
	padding-left: 8px;
	padding-right: 8px;
	padding-top: 10px;
	margin-right: 1px;
	margin-left: 1px;
	float: left;
	text-align: center;
}

.menuItem .selected, .menuItem:active {
	background: black;	
}


.headerOption {
	float: right;
	margin-right: 20px;
	background: blue;
	padding: 5px;
}

.headerOption a {
	color: white;
	text-decoration: none;	
}


/* FORMS */

.inputBox,
.formButton, .inputTextArea {
    font-size: 18px;
    line-height: normal;
    vertical-align: top;
    color: #444;
}

.inputBox, .inputTextArea {
    width: 100%;
    height: 35px;
    padding: 10px;
    border: 0px;
    border-bottom: 1px solid #ccc;
}

.inputTextArea {
	height: 75px;
	max-width: 100%;
}

.formButton {
	border-radius: 8px;
	-webkit-border-radius: 0px;
    border: 1px solid #bbb !important;	
    text-align: center;
	border: 1px solid #a31818;
	width: 100% !important;
	height: 40px;
	margin: auto;
	margin-top: 10px;
	color: #444;
}

.formButton {
    display: inline-block;
    height: 44px;
    padding: 0 10px;
    margin: 5px 0 0;
    white-space: nowrap;
    cursor: pointer;
    background-color: #f5f5f5;
    background-image: -webkit-linear-gradient(rgba(255,255,255,0), #f1f1f1);
    background-image: -moz-linear-gradient(rgba(255,255,255,0), #f1f1f1);
    background-image: -ms-linear-gradient(rgba(255,255,255,0), #f1f1f1);
    background-image: -o-linear-gradient(rgba(255,255,255,0), #f1f1f1);
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    *overflow: visible;
    *display: inline;
    *zoom: 1;
}

.formButton:hover,
.formButton:focus {
    border-color: #aaa;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
    background-color: #f8f8f8;
}

.formButton:active {
	background: #105cb6;
	color: white;
}

.inputBox:hover,
.inputBox:focus, .inputBox:active, .inputTextArea:hover, .inputTextArea:focus, .inputTextArea:active {
    outline: 0;
    color: #222;
    background: #f0f0f0;
}

input::-moz-focus-inner {
    padding: 0;
    border: 0;
}


/* PROFILE PAGE CONTAINERS */
#userWidgetContainer, #formContainer {
	background: #fafafa;
	border: 1px solid #b3b3b3;
	border-radius: 8px;
	-webkit-border-radius: 8px;
	margin: 0 auto;
	box-shadow: 0 1px 10px #a7a7a7, inset 0 1px 0 #fff;
	-webkit-box-shadow: 0 1px 10px #a7a7a7, inset 0 1px 0 #fff;
	background: #fcfcfc;
	height: 220px;
	overflow: hidden;
}

#formContainer, #manageEventContainer {
	height: auto;
}

#userWidgetContainer #topContainer {
	width: 100%;
	height: 121px;
	float: left;
}

#userWidgetContainer #profilePictureContainer {
	border-bottom: 1px solid #ddd;
	width: 117px;
	height: 117px;
	float: left;
	overflow: hidden;
}

#userWidgetContainer .profilePicture {
	width: 100%;
	height: auto;
	background: #fff;

}

#userWidgetContainer #statsContainer, #userWidgetContainer #actionContainer {
	float: left;
	border-bottom: 1px solid #ddd;
}

#actionContainer {
	padding-top: 10px;
	padding-left: 10px;
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size: 20px;
	width: 319px;
	height: 35px;
	border-left: 1px solid #ddd;
	vertical-align: baseline;
}

#userWidgetContainer #statsContainer .statsColumn {
	width: 99px;
	height: 50px;
	padding: 5px;
	padding-top: 15px;
	float: left;
	text-align: center;
	border-left: 1px solid #ddd;
}

#userWidgetContainer #statsContainer .statsColumn .number {
	font-size: 28px;
	font-weight: bold;
	text-align: center;	
	width: 100%;
}

#userWidgetContainer #statsContainer .statsColumn .smallLabel {
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size: 14px;
	font-weight: 500;
	color: gray;
	width: 100%;
	text-align: center;	
	float: left;
}

#userWidgetContainer #bottomContainer {
	float: left;
	width: 398px;
	padding: 20px;
}

#userWidgetContainer .name {
	font-size: 24px;
	font-weight: bold;
}

#userWidgetContainer .location {
	margin-top: 5px;
	font-size: 18px;
	color: gray;
}

#profileContainer h3, #manageEventContainer h3 {
	margin-bottom: 3px;
	margin-left: 3px;
}


/* BUTTONS */
.button {
	font-family: helvetica, sans-serif;
	font-size: 22px;
	text-decoration: none;
	margin-top: 10px;
	border-radius: 8px;
	-webkit-border-radius: 8px;

}


.logoutButton {
	color: white;
	background: red;
	float: left;	
	text-align: center;
	border: 1px solid #a31818;
	width: 100% !important;
	margin: auto;
	margin-top: 10px;
}

.big {
	width: 419px;
	padding-top: 10px;
	padding-bottom: 10px;
}