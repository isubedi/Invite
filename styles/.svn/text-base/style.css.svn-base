/* CONTAINERS */

html, body {
	padding: 0px;
	margin: 0px;
	width: 100%;
	height: 100%;
	overflow-x: hidden;
	background: #F0F0F0;
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;

}

body {
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
	font-smooth: always;
	font-weight: 300;
}

#container {
	padding: 15px;
}

#footer {
	height: 35px;
	width: 100%;
	position: fixed;
	bottom: 0px;
	left: 0px;
	color: #fff;
}

h3 {
	margin-top: 5px;
	margin-bottom: 3px;	
}

#loginForm {
}

#loginHeader {
	background: #eee;
	width: 100%;
}

#headerBar {
	width: 100%;
	height: 40px;
	background-color: #94c4ff;
}

#headerBar #currentPage {
	float: left;
	color: #fff;
	margin-left: 10px;
	margin-top: 6px;
}

#headerBar .button {
	width: 20px;
	height: 20px;
	margin-right: 10px;
	font-family: sans-serif;
	font-size: 18px;
	padding: 3px;
	background: #94c6ff;
	float: right;
	border: 1px solid #4e5cc5;
	text-align: center;
	vertical-align: middle;
}


.headerOption {
	float: right;
	margin-right: 20px;
	background: blue;
	padding: 5px;
}

.headerOption a {
	color: white;
	text-decoration: none;	
}

.menuItem img{
	height: 16px;	
}

/* FORMS */

.inputBox,
.formButton, .inputTextArea {
    font-size: 18px;
    line-height: normal;
    vertical-align: top;
}

.inputBox, .inputTextArea {
    width: 100%;
    height: 35px;
    padding: 10px;
}

.inputTextArea {
	height: 75px;
	max-width: 100%;
}

.formButton {
	border-radius: 8px;
	-webkit-border-radius: 0px;
    text-align: center;
	width: 100% !important;
	height: 40px;
	margin: auto;
	margin-top: 10px;
}

.formButton {
    display: inline-block;
    height: 44px;
    padding: 0 10px;
    margin: 5px 0 0;
    white-space: nowrap;
    cursor: pointer;
}

/* PROFILE PAGE CONTAINERS */
#userWidgetContainer, #eventWidgetContainer {
	margin: 0 auto;
	overflow: hidden;
}

#eventWidgetContainer {
	margin-bottom: 20px;
	padding: 15px;
	box-shadow: 3px 3px 20px #CCC;
	border-radius: 8px;
	border: 1px solid #DDD;
	background: #fff;
}

#formContainer, #manageEventContainer {
	height: auto;
	margin: 0 auto;
}

#userWidgetContainer #topContainer, #eventWidgetContainer #topContainer {
	width: 100%;
	float: left;
	min-height: 120px;
	overflow: hidden;

}

#userWidgetContainer #profilePictureContainer {
	width: 25%;
	height: auto;
	float: left;
	overflow: hidden;
}

#userWidgetContainer .profilePicture {
	width: 100%;
	height: auto;
}

#userWidgetContainer #statsContainer, #userWidgetContainer #actionContainer,  #eventWidgetContainer #actionContainer {
	float: left;
	width: 70%;
}

#actionContainer {
	padding-top: 10px;
	padding-left: 10px;
	font-size: 20px;
	width: 70%;
	height: 50%;
	vertical-align: bottom;
}

#userWidgetContainer #statsContainer .statsColumn {
	width: 33%;
	height: 50px;
	padding: 0px;
	padding-top: 15px;
	float: left;
	text-align: center;
}

#userWidgetContainer #statsContainer .statsColumn .number {
	font-size: 28px;
	font-weight: bold;
	text-align: center;	
	width: 100%;
}

#userWidgetContainer #statsContainer .statsColumn .smallLabel {
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size: 14px;
	font-weight: 500;
	color: gray;
	width: 100%;
	text-align: center;	
	float: left;
}

#userWidgetContainer #bottomContainer {
	float: left;
	width: 100%;
	padding: 20px;
}

#userWidgetContainer .name, #eventWidgetContainer .name {
	font-size: 24px;
	font-weight: bold;
}

#userWidgetContainer .location, #eventWidgetContainer .location {
	margin-top: 5px;
	font-size: 18px;
	color: gray;
}

#profileContainer h3, #manageEventContainer h3, #eventWidgetContainer h3 {
	margin-bottom: 3px;
	margin-left: 3px;
}


/* BUTTONS */
.button {
	font-family: helvetica, sans-serif;
	font-size: 22px;
	text-decoration: none;
	margin-top: 10px;
	border-radius: 8px;
	-webkit-border-radius: 8px;

}


.logoutButton {
	float: left;	
	width: 100% !important;
	margin: auto;
	margin-top: 10px;
}

.big {
	width: 419px;
	padding-top: 10px;
	padding-bottom: 10px;
}


/* WIDGETS */

.date {
	width: 73px; height: 90px;
	background: #fcfcfc; 
	background: linear-gradient(top, #fcfcfc 0%,#dad8d8 100%); 
	background: -moz-linear-gradient(top, #fcfcfc 0%, #dad8d8 100%); 
	background: -webkit-linear-gradient(top, #fcfcfc 0%,#dad8d8 100%); 
	border: 1px solid #d2d2d2;
	border-radius: 10px;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	float: left;
	margin-right: 10px;
}
	.date p {
		font-family: Helvetica, sans-serif;
		font-size: 48px; text-align: center; color: #9e9e9e;
		margin: 0px;
		margin-top: 5px; 
	}
	
	.date p span {
		background: #d10000; 
		background: linear-gradient(top, #d10000 0%, #7a0909 100%);
		background: -moz-linear-gradient(top, #d10000 0%, #7a0909 100%);
		background: -webkit-linear-gradient(top, #d10000 0%, #7a0909 100%);
		font-size: 18px; font-weight: bold; color: #fff; text-transform: uppercase; 	
		display: block;
		padding-top: 2px;
		padding-bottom: 4px;
		border-top: 3px solid #a13838;
		border-radius: 0 0 10px 10px;
		-moz-border-radius: 0 0 10px 10px;
		-webkit-border-radius: 0 0 10px 10px;
	}

@-moz-document url-prefix() {
    .date {
        padding: 16px 0 0 0;
    }
    .date p span {
    	padding: 9px 0 3px 0;
    }
}
